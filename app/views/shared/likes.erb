<% if current_user %>

  <!-- if the f_post has already been liked -->
  <% if like = current_user.likes.find_by({ finstagram_post: finstagram_post.id }) %>
    <!-- the form to delete the like -->
    <form action="/likes/<%= like.id %>" method="POST">
      <input name="_method" type="hidden" value="delete">
      <button class="button user-like" type="submit">
        <%= finstagram_post.like_count %> likes
      </button>
    </form>

  <% else %>
    <!-- the form to create the like -->
    <form action="/likes" method="POST">
      <input name="finstagram_post_id" type="hidden" value="<%= finstagram_post.id %>">
      <button class="button" type="submit">
        <%= finstagram_post.like_count %> likes
      </button>
    </form>

  <% end %>

<% else %>

  <%= finstagram_post.like_count %> likes

<% end %>
